<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">


    <TextView
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/placeName" android:text="You are here" android:capitalize="sentences"
            android:autoText="false" android:focusable="false"
            android:visibility="visible" android:textAlignment="center" android:layout_weight="0.09"
            android:layout_gravity="center_horizontal" android:textSize="30dp"/>

    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar" android:layout_gravity="center_horizontal" android:layout_weight="0.09"
            android:numStars="5" android:rating="5"
            android:isIndicator="true" android:indeterminateOnly="false"
            android:layout_column="11"/>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <TextView
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:text="Operational"
                android:textStyle="bold"
                android:textSize="25dp" android:layout_weight="0.05" android:layout_margin="5dp"/>
        <TextView
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:id="@+id/isOperational"
                android:textSize="25dp" android:layout_weight="0.05" android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Free"
                android:layout_weight="0.05" android:textSize="25dp"
                android:layout_gravity="center_horizontal" android:layout_margin="5dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/isFree" android:layout_weight="0.05" android:textSize="25dp"
                android:layout_gravity="center_horizontal" android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Kind"
                android:layout_weight="0.05" android:textSize="25dp"
                android:layout_gravity="center_horizontal" android:layout_margin="5dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ofKind" android:layout_weight="0.05" android:textSize="25dp"
                android:layout_gravity="center_horizontal" android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="For"
                android:layout_weight="0.05" android:textSize="25dp"
                android:layout_margin="5dp"/>

        <GridLayout
                android:layout_width="wrap_content"
                android:id="@+id/suitableTo"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" android:orientation="vertical" android:columnCount="5"
                android:rowCount="1" android:padding="0.5dp">

            <ImageView
                    android:id="@+id/menIcon"
                    android:layout_height="35dp"
                    android:layout_width="35dp"/>
            <ImageView
                    android:id="@+id/womenIcon"
                    android:layout_height="35dp"
                    android:layout_width="35dp"/>
            <ImageView
                    android:id="@+id/babiesIcon"
                    android:layout_height="35dp"
                    android:layout_width="35dp"/>
            <ImageView
                    android:id="@+id/handicappedIcon"
                    android:layout_height="35dp"
                    android:layout_width="35dp"/>
            <ImageView
                    android:id="@+id/transgenderIcon"
                    android:layout_height="35dp"
                    android:layout_width="35dp"/>
        </GridLayout>

    </LinearLayout>

</LinearLayout>